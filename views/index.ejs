<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini Whatsapp</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h1>All Chats !</h1>
    <hr>
    <form method="GET" action="/chats/new">
        <button class="btn">New Chat</button>
    </form>
    <br>
    <%for(let chat of chats){%>
        <div class="chat">
            <p>From: <i><%= chat.from %></i></p>
            <div class="msg">
                <p>Message: <%= chat.message %></p>
                <form method="GET" action="/chats/<%= chat._id %>/edit">
                    <button class="ebtn">Edit</button>
                </form>
                <form method="post" action="/chats/<%= chat._id %>?_method=DELETE">
                    <button class="dbtn">Delete</button>
                </form>
            </div>
            <p>To: <i><%= chat.to %></i></p>
            <hr>
            <p><%= chat.created_at.toString().split(" ")[4] %></p>
            <p><%= chat.created_at.toString().split(" ").slice(0,4).join(" ")%></p>
        </div>
        <br><br>
    <%}%>
    <hr>
    <br><br>
</body>
</html>
